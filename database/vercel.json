{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "AIVEN_HOST": "@aiven_host",
    "AIVEN_PORT": "@aiven_port",
    "AIVEN_USER": "@aiven_user",
    "AIVEN_PASSWORD": "@aiven_password",
    "AIVEN_DB_NAME": "@aiven_db_name",
    "AIVEN_CA_CERT": "@aiven_ca_cert"
  }
}